								<exclude>org.ops4j.pax.web.extender.samples.*</exclude>
								<exclude>org.ops4j.pax.web.itest.*</exclude>
								<exclude>org.ops4j.pax.web.samples.*</exclude>
								<exclude>org.apache.xbean.*</exclude>
								<exclude>org.objectweb.asm.*</exclude>
							</excludes>
							<append>true</append>
						</configuration>
					</execution>
					<execution>
						<id>report-test</id>
						<goals>
							<goal>report</goal>
						</goals>
					</execution>
					<!-- <execution> <id>report-integration</id> <goals> <goal>report-integration</goal> 
						</goals> </execution> -->
				</executions>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-source-plugin</artifactId>
				<executions>
					<execution>
